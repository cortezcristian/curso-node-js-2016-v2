extends layout

block content
  h1 ABM demo
  .container(style='margin-top:30px')
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title
            strong Sign in
          div(style='float:right; font-size: 80%; position: relative; top:-10px')
            a(href='#') Forgot password?
        .panel-body
          form(role='form',action='/login',method='post')
            .hide.alert.alert-danger
              a.close(data-dismiss='alert', href='#') Ã—
              | Incorrect Username or Password!
            .input-group(style='margin-bottom: 12px')
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(type='text', name='email', id='email', placeholder='E-mail here...')
            .input-group(style='margin-bottom: 12px')
              span.input-group-addon
                i.glyphicon.glyphicon-lock
              input.form-control(type='password', name='password', id='password', placeholder='Password...')
            .input-group
              .checkbox(style='margin-top: 0px;')
                label
                  input#login-remember(type='checkbox', name='remember', value='1')
                  |  Remember me
            button.btn.btn-success(type='submit') Login
            hr(style='margin-top:10px;margin-bottom:10px;')
            .form-group
              div(style='font-size:85%')
                | Don't have an account!
                a(href='#', onclick="$('#loginbox').hide(); $('#signupbox').show()")
                  | Sign Up Here

